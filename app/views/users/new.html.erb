<br><br>
<% provide(:title, 'SignUp') %>
<h1>SignUp</h1>
<div class = "row">
	<div class = "span6 offset3">
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirm Password" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create Account", class: "btn btn_large btn_primary" %>
	<% end %>
	</div>
</div>
